# Iron MCB API Environment Configuration
# Copy to .env.iron and fill the values as needed

# Iron MCB API Configuration
BASE_URL=https://api.ironmcb.com
API_TOKEN=your_iron_bearer_token_here

# Iron MCB Specific Settings
IRON_ENVIRONMENT=staging
IRON_API_VERSION=v1
IRON_TIMEOUT_MS=30000

# Iron MCB Authentication
IRON_CLIENT_ID=your_client_id
IRON_CLIENT_SECRET=your_client_secret
IRON_GRANT_TYPE=client_credentials

# Iron MCB Retry Configuration
API_RETRY_MAX=3
API_RETRY_BASE_MS=500

# Iron MCB Test Data
IRON_TEST_CUSTOMER_ID=test_customer_uuid
IRON_TEST_ACCOUNT_ID=test_account_uuid
IRON_TEST_LOAN_ID=test_loan_uuid

# Iron MCB Security
IRON_ENCRYPTION_KEY=your_encryption_key
IRON_WEBHOOK_SECRET=your_webhook_secret

# Iron MCB Compliance
IRON_AUDIT_ENABLED=true
IRON_COMPLIANCE_MODE=strict
IRON_DATA_RETENTION_DAYS=2555

# Iron MCB Performance
IRON_MAX_CONCURRENT_REQUESTS=100
IRON_RATE_LIMIT_PER_MINUTE=1000

# Iron MCB Monitoring
IRON_METRICS_ENABLED=true
IRON_ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook
